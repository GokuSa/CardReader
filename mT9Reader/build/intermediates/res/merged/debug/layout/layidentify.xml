<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/aliceblue"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="0px"
        android:layout_height="0px"
        android:focusable="true"
        android:focusableInTouchMode="true" />

    <TextView
        android:id="@+id/textView_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="4dp"
        android:text="姓名" />

    <TextView
        android:id="@+id/TextView_Sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView_Name"
        android:layout_below="@+id/textView_Name"
        android:layout_marginTop="20dp"
        android:text="性别" />

    <TextView
        android:id="@+id/TextView_Nation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView_Sex"
        android:layout_below="@+id/TextView_Sex"
        android:layout_marginTop="20dp"
        android:text="名族" />

    <TextView
        android:id="@+id/TextView_Birth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView_Nation"
        android:layout_below="@+id/TextView_Nation"
        android:layout_marginTop="20dp"
        android:text="出生日期" />

    <TextView
        android:id="@+id/TextView_Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView_Birth"
        android:layout_below="@+id/TextView_Birth"
        android:layout_marginTop="25dp"
        android:text="出生地址" />

    <TextView
        android:id="@+id/TextView_IDNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView_Address"
        android:layout_below="@+id/TextView_Address"
        android:layout_marginTop="25dp"
        android:text="身份证号码" />

    <TextView
        android:id="@+id/TextView_Department"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView_IDNo"
        android:layout_below="@+id/TextView_IDNo"
        android:layout_marginTop="25dp"
        android:text="签发机关" />

    <TextView
        android:id="@+id/TextView_DateStart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView_Department"
        android:layout_below="@+id/TextView_Department"
        android:layout_marginTop="25dp"
        android:text="起始日期" />

    <TextView
        android:id="@+id/TextView_DateEnd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView_DateStart"
        android:layout_below="@+id/TextView_DateStart"
        android:layout_marginTop="25dp"
        android:text="结束日期" />
    
    <ImageView
        android:id="@+id/imageViewPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/photo" />

    <EditText
        android:id="@+id/editText_Name"
        android:layout_width="100dp"
        android:layout_height="42dp"
        android:layout_above="@+id/editText_Sex"
        android:layout_alignTop="@+id/textView_Name"
        android:layout_centerVertical="false"
        android:layout_marginTop="1dp"
        android:layout_toRightOf="@+id/textView_Name"
        android:clickable="false"
        android:gravity="bottom" />
    
    <EditText
        android:id="@+id/editText_Sex"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_above="@+id/editText_Nation"
        android:layout_alignLeft="@+id/editText_Name"
        android:layout_alignTop="@+id/TextView_Sex" />
	
    <EditText
        android:id="@+id/editText_Nation"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_above="@+id/editText_Birth"
        android:layout_alignLeft="@+id/editText_Name"
        android:layout_alignTop="@+id/TextView_Nation" />
    
    <EditText
        android:id="@+id/editText_Birth"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignLeft="@+id/btn_IdentifyRead"
        android:layout_alignTop="@+id/TextView_Birth" />
    
    
    <EditText
        android:id="@+id/editText_Address"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/TextView_Address"
        android:layout_alignLeft="@+id/btn_IdentifyRead" />
    
    <EditText
        android:id="@+id/editText_IDNo"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/TextView_IDNo"
        android:layout_alignLeft="@+id/btn_IdentifyRead" />
    
    <EditText
        android:id="@+id/editText_Department"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/TextView_Department"
        android:layout_alignLeft="@+id/btn_IdentifyRead" />
	
    <EditText
        android:id="@+id/editText_DateStart"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/TextView_DateStart"
        android:layout_alignLeft="@+id/btn_IdentifyRead" />
    
    <EditText
        android:id="@+id/editText_DateEnd"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/TextView_DateEnd"
        android:layout_alignLeft="@+id/btn_IdentifyRead" />

    <TextView
        android:id="@+id/textView_IDCExecuteInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/TextView_DateEnd"
        android:layout_below="@+id/editText_DateEnd"
        android:text="执行信息" />

    <EditText
        android:id="@+id/editText_idcexecuteinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/editText_DateEnd"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView_IDCExecuteInfo"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <Button
        android:id="@+id/btn_IDReadFinger"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/btn_IdentifyRead"
        android:layout_alignBottom="@+id/btn_IdentifyRead"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/btn_IdentifyRead"
        android:onClick="bt_IDReadFinger"
        android:text="读卡带指纹" />

    <Button
        android:id="@+id/btn_IdentifyRead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/TextView_IDNo"
        android:onClick="bt_IdentifyRead"
        android:text="身份证读卡" />
    
</RelativeLayout>